{
  "name": "@rafty/design",
  "version": "0.5.0",
  "description": "React + Acessiable + Tailwind CSS Dynamic Component Library",
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  },
  "scripts": {
    "build": "turbo run build --filter=@rafty/plugin --filter=@rafty/ui",
    "build:web": "turbo run build --filter=web",
    "build:plugin": "turbo run build --filter=@rafty/plugin",
    "dev": "npm run build:plugin && turbo run dev --no-cache --continue --filter=@rafty/ui",
    "dev:web": "npm run build && turbo run dev --no-cache --continue --filter=web",
    "lint": "turbo lint",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=...^web && changeset publish",
    "test": "turbo run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rhinobase/design-system.git"
  },
  "keywords": [
    "react",
    "tailwind",
    "radix",
    "react-aria"
  ],
  "author": "Aditya Mathur",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rhinobase/design-system/issues"
  },
  "homepage": "https://github.com/rhinobase/design-system#readme",
  "dependencies": {
    "turbo": "^1.9.3"
  },
  "devDependencies": {
    "json": "^11.0.0"
  }
}