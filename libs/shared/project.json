{
  "name": "shared",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/shared/**/*.{ts,tsx,js,jsx}",
          "libs/shared/package.json"
        ]
      }
    },
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/shared",
        "tsConfig": "libs/shared/tsconfig.lib.json",
        "project": "libs/shared/package.json",
        "entryFile": "libs/shared/src/index.ts",
        "rollupConfig": "rollup.config.js",
        "compiler": "swc",
        "assets": [
          {
            "glob": "libs/shared/README.md",
            "input": ".",
            "output": "."
          }
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs ui {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional"
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "distFolderPath": "dist/packages/shared"
      },
      "dependsOn": ["build"]
    }
  }
}
