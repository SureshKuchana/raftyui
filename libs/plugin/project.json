{
  "name": "plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/plugin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/plugin",
        "main": "libs/plugin/src/index.js",
        "tsConfig": "libs/plugin/tsconfig.lib.json",
        "assets": [
          {
            "glob": "README.md",
            "input": ".",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/plugin/**/*.js", "libs/plugin/package.json"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs plugin {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional"
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "distFolderPath": "dist/packages/plugin"
      },
      "dependsOn": ["build"]
    }
  },
  "tags": []
}
